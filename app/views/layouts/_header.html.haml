.header

  .logo
    .icon= link_to "&#128680;".html_safe, root_path
    .wordmark= link_to "DiffAlert", root_path

  .menu

    = check_box_tag 'menu-toggle-check-box'
    = label_tag 'menu-toggle-check-box' do
      %span Menu

    .menu-items
      %ul
        - if current_user
          %li= link_to 'Triggers', triggers_path
          %li= link_to 'Setup', trigger_setup_instructions_path
          %li= link_to 'Log out', session_path, method: :delete
        - else
          %li= link_to 'Sign up', new_user_registration_path
          %li= link_to 'Log in', new_session_path
