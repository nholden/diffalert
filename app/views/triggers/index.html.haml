.triggers__email
  = current_user.email

.triggers__github-events-secret
  Your GitHub webhook secret is #{current_user.github_events_secret}

.triggers__triggers
  - current_user.triggers.each do |trigger|
    .triggers__trigger
      .description
        When #{trigger.modified_file} changes on the #{trigger.branch} branch of #{trigger.repository_name},
        send an email to #{trigger.email} saying &ldquo;#{trigger.message}&rdquo;
      .last-alert
        - if trigger.alerts.any?
          Last alert was #{time_ago_in_words(trigger.alerts.last.created_at)} ago.
        - else
          This trigger has never created an alert.
      = link_to 'Delete', trigger_path(trigger), method: :delete

.triggers__new-trigger
  = link_to 'Add trigger', new_trigger_path
